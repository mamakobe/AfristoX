
@model IEnumerable<afriStox.Models.ShareTrades>  
 <table class="table table-striped table-hover" id="sample_2">
                                                                <thead>
                                                                    <tr>
                                                                        <th class="width-50 hidden-xs hidden-sm"></th>
                                                                        <th>Symbol</th>
                                                                        <th>Opening Price GH₵</th>
                                                                        <th class="hidden-xs hidden-sm">Closing Price GH₵ <a href="javascript:void(0)" data-toggle="popover" data-trigger="focus" data-placement="top" data-content="Impressions help you understand how often your ad is being seen. They're also used to calculate clickthrough rate (CTR), which is helpful in determining the effectiveness of your ads."><i class="fa fa-question-circle text-dark-transparent margin-left-5"></i></a></th>
                                                                        <th class="hidden-xs hidden-sm">Price Change <a href="javascript:void(0)" data-toggle="popover" data-trigger="focus" data-placement="top" data-content="Click-through rate (CTR) is the ratio of users who click on a specific link to the number of total users who view a page, email, or advertisement."><i class="fa fa-question-circle text-dark-transparent margin-left-5"></i></a></th>
                                                                        <th class="hidden-xs hidden-sm">Volume <a href="javascript:void(0)" data-toggle="popover" data-trigger="focus" data-placement="top" data-content="Cost is the sum of your cost-per-click (CPC) spend and cost-per-thousand impressions (CPM) spend during this period."><i class="fa fa-question-circle text-dark-transparent margin-left-5"></i></a></th>
                                                                        <th>Status</th>
                                                                        <th>Actions</th>
                                                                    </tr>
                                                                </thead>
                                                                <tbody>
                                                                   @foreach (var item in Model) {
                 <tr>
                                  
                                                                        <td class="hidden-xs hidden-sm">
                                                                        <div class="checkbox clip-check check-primary">
                                                                            <input type="checkbox" id="checkbox1" value="1">
                                                                            <label for="checkbox1"> </label>
                                                                        </div>
                                                                        </td>
                                                                        <td><a href=""> <div class="lettericon pull-left margin-right-10" data-icon="fa" data-box="round" data-color="#6F83B6" data-color-hover="#4862A3"></div> <span class="block">@Html.DisplayFor(modelItem => item.ticker)</span> <span class="text-small text-light">@Html.DisplayFor(modelItem => item.companyName)</span> </a></td>
                                                                        <td>@Html.DisplayFor(modelItem => item.openingPrice)</td>
                                                                        <td class="hidden-xs hidden-sm">@Html.DisplayFor(modelItem => item.closingPrice)</td>
                                                                        <td class="hidden-xs hidden-sm">@Html.DisplayFor(modelItem => item.priceChange)</td>
                                                                        <td class="hidden-xs hidden-sm"><span class="text-bold">0</span></td>

                                                                        @if(item.priceChange > 0){
                                                                        <td><span class="label label-sm label-success"><i class="fa fa-hand-o-up"></i> Up</span></td>
                                                                        }
             @if(item.priceChange < 0){
                                                                        <td><span class="label label-sm label-danger"><i class="fa fa-hand-o-down"></i>Down</span></td>
                                                                        }
              @if(item.priceChange == 0m){
                                                                        <td><span class="label label-sm label-inverse">No Change</span></td>
                                                                        }
            
            
                                                                        <td>
                                                                        <div class="dropdown">
                                                                            <a class="btn dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true"> <i class="fa fa-caret-down"></i> </a>
                                                                            <ul class="dropdown-menu pull-right animated fadeInRight">
                                                                                <li>
                                                                                    <a href="#"> Edit campaigns </a>
                                                                                </li>
                                                                                <li>
                                                                                    <a href="#"> Disable all campaigns </a>
                                                                                </li>
                                                                                <li class="divider"></li>
                                                                                <li>
                                                                                    <a href="#"> Settings </a>
                                                                                </li>
                                                                            </ul>
                                                                        </div>
                                                                        </td>
                                                                    </tr>
            }  
                                                                    
                                                                </tbody>
                                                            </table>